<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tx_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="21dp"
        android:text="TextView"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tx_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tx_id"
        android:layout_marginStart="28dp"
        android:layout_toEndOf="@+id/tx_id"
        android:text="TextView"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_admin_user"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tx_id"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@+id/btn_admin_q1"
        android:background="@drawable/rounded_corner"
        android:text="q2"
        android:textColor="@android:color/background_light"
        android:textSize="15sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_admin_q1"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_admin_user"
        android:layout_alignBottom="@+id/btn_admin_user"
        android:layout_alignStart="@+id/tx_id"
        android:background="@drawable/rounded_corner"
        android:text="Q1"
        android:textColor="@android:color/background_light"
        android:textSize="15sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_admin_q3"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_admin_user"
        android:layout_alignBottom="@+id/btn_admin_user"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/btn_admin_user"
        android:background="@drawable/rounded_corner"
        android:text="Q3"
        android:textColor="@android:color/background_light"
        android:textSize="15sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_admin_q4"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_admin_q3"
        android:layout_alignBottom="@+id/btn_admin_q3"
        android:layout_marginStart="13dp"
        android:layout_toEndOf="@+id/btn_admin_q3"
        android:background="@drawable/rounded_corner"
        android:text="Q4"
        android:textColor="@android:color/background_light"
        android:textSize="15sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_admin_q5"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_admin_q4"
        android:layout_alignBottom="@+id/btn_admin_q4"
        android:layout_marginStart="11dp"
        android:layout_toEndOf="@+id/btn_admin_q4"
        android:background="@drawable/rounded_corner"
        android:text="Q5"
        android:textColor="@android:color/background_light"
        android:textSize="15sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_admin_q6"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_admin_q5"
        android:layout_alignBottom="@+id/btn_admin_q5"
        android:layout_marginStart="11dp"
        android:layout_toEndOf="@+id/btn_admin_q5"
        android:background="@drawable/rounded_corner"
        android:text="Q6"
        android:textColor="@android:color/background_light"
        android:textSize="15sp"
        android:textStyle="bold" />

</RelativeLayout>